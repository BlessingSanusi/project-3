{
  "name": "project-3",
  "version": "1.0.0",
  "description": "A Simple Personal Finance App With MERN",
  "proxy": "http://localhost:3001/",
  "main": "server.js",
  "scripts": {
    "start": "if-env NODE_ENV=production && npm run start:prod || npm run start:dev",
    "start:prod": "node server.js",
    "start:dev": "concurrently \"nodemon --ignore 'client/*'\" \"npm run client\"",
    "client": "cd client && npm run start",
    "install": "cd client && npm install",
    "build": "cd client && npm run build",
    "heroku-postbuild": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/BlessingSanusi/project-3.git"
  },
  "author": "Blessing Sanusi",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/BlessingSanusi/project-3/issues"
  },
  "homepage": "https://github.com/BlessingSanusi/project-3#readme",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "config": "^3.2.4",
    "express": "^4.17.1",
    "is-empty": "^1.2.0",
    "jsonwebtoken": "^8.5.1",
    "moment": "^2.24.0",
    "mongoose": "^5.7.8",
    "passport": "^0.4.0",
    "passport-jwt": "^4.0.0",
    "plaid": "^4.3.0",
    "validator": "^12.0.0"
  },
  "devDependencies": {
    "concurrently": "^5.0.0",
    "nodemon": "^1.19.4"
  }
}
